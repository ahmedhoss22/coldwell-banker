        <form action="/admin/login" method="post"  class="pb-5">
          <div class="txt_field">
            <input type="text" name="email" required>
            <span></span>
            <label>Username</label>
          </div>
          <div class="txt_field">
            <input type="password" required>
            <span></span>
            <label>Password</label>
          </div>
          <input name="password" type="submit" required value="Login">
        </form>
      </div>
   
